with(Domains):

InversoFinito:=proc(K,e)
local inverso, oc, r, s, t, K1, K2;
oc:=K[Size]; #orden del cuerpo
if isprime(oc) then
    (r, s, t) := EuclidesExt(Z, e, oc);
    inverso := K[Input](s);
else:
    K1 := K[Representation];
    K2 := K[Extension];
    if e = K[1] then
        inverso := e;
    fi:
    (r,s,t):=EuclidesExt(K1,e,K2);     
    if r=K1[1] then
        inverso := s;
    else:
        inverso := 0;
    fi:
fi:
return(inverso)
end:

